<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="test"
            type="com.somniatores.lesson6.view.test.Test" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/testCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <SurfaceView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:id="@+id/cardHeader" />

                <TextView
                    android:id="@+id/actualWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@{test.actualWord}"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                <Button
                    android:id="@+id/firstAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{test.answers.get(0)}" />

                <Button
                    android:id="@+id/secondAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{test.answers.get(1)}" />
                <Button
                    android:id="@+id/thirdAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{test.answers.get(2)}" />
                <Button
                    android:id="@+id/forthAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{test.answers.get(3)}" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>